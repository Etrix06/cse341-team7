<div class="backdrop"></div>
<header class="main-header">
    <div class="main-header__logo" id="side-title-toggle">
        <a href="/">EQ Service Finder</a>
    </div>
    <button id="side-menu-toggle">Menu</button>
    <div class="main-header__item"  id="side-title-toggle">
        <% let pagePath;%>               <!--This code adds the route name to html when screen is small-->
        <% pagePath = path.split('/');%>
        <% if (path === '/') {%>
            <% pagePath = ['', 'home']; %>
        <% } %>
        <% if (pagePath[1] === 'admin') { %> %>
            <% pagePath[1] = pagePath[2]; %>
        <% } %>
        <a class="active" href="<%=path%>"><%= pagePath[1] %></a>
    </div>
    <nav class="main-header__nav">
        <div class="main-header__logo">
            <a href="/">EQ Service Finder</a>
        </div>
        <ul class="main-header__item-list">
            <li class="main-header__item">
                <a class="<%= path === '/' ? 'active' : '' %>" href="/">Home</a>
            </li>
            <li class="main-header__item">
                <a id="services" class="<%= path === '/services' ? 'active' : '' %>" href="/services">Services</a>
            </li>
            <li class="main-header__item">
                <a class="<%= path === '/talents' ? 'active' : '' %>" href="/talents">Talents</a>
            </li>
            <% if (isAuthenticated) { %>
                <li class="main-header__item">
                    <a class="<%= path === '/cart' ? 'active' : '' %>" href="/cart">Cart</a>
                </li>
                <li class="main-header__item">
                    <a class="<%= path === '/orders' ? 'active' : '' %>" href="/orders">Orders</a>
                </li>
            <% } %>
        </ul>
        <ul class="main-header__item-list">
            <% if (!isAuthenticated) { %>
                <li class="main-header__item">
                    <a class="<%= path === '/login' ? 'active' : '' %>" href="/login">Log-in</a>
                </li>
                <li class="main-header__item">
                    <a class="<%= path === '/signup' ? 'active' : '' %>" href="/signup">Sign-up</a>
                </li>
            <% } else { %>
                <li class="main-header__item">
                    <a><%= userName %></a>
                </li>
                <li class="main-header__item">
                    <form action="/logout" method="post">
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                        <button type="submit">Logout</button>
                    </form>
                </li>
            <% } %>
        </ul>
    </nav>
</header>

<nav class="mobile-nav">
    <ul class="mobile-nav__item-list">
        <li class="mobile-nav__item">
            <a class="<%= path === '/' ? 'active' : '' %>" href="/">EQ Service Finder</a>
        </li>
        <li class="mobile-nav__item">
            <a class="<%= path === '/products' ? 'active' : '' %>" href="/services">Services</a>
        </li>
        <li class="mobile-nav__item">
            <a class="<%= path === '/products' ? 'active' : '' %>" href="/talents">Talents</a>
        </li>
        <% if (isAuthenticated) { %>
            <!--<li class="mobile-nav__item">
                <a class="<%= path === '/cart' ? 'active' : '' %>" href="/cart">Cart</a>
            </li>
            <li class="mobile-nav__item">
                <a class="<%= path === '/orders' ? 'active' : '' %>" href="/orders">Orders</a>
            </li>
            <li class="mobile-nav__item">
                <a class="<%= path === '/admin/add-product' ? 'active' : '' %>" href="/admin/add-product">Add Service
                </a>
            </li>
            <li class="mobile-nav__item">
                <a class="<%= path === '/admin/products' ? 'active' : '' %>" href="/admin/products">Edit Service
                </a>
            </li>-->
        <% } %>
        <% if (!isAuthenticated) { %>
            <li class="mobile-nav__item">
                <a class="<%= path === '/login' ? 'active' : '' %>" href="/login">Login</a>
            </li>
            <li class="mobile-nav__item">
                <a class="<%= path === '/signup' ? 'active' : '' %>" href="/signup">Signup</a>
            </li>
        <% } else { %>
            <li class="mobile-nav__item">
                <form action="/logout" method="post">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <button type="submit">Logout</button>
                </form>
            </li>
        <% } %>
    </ul>
</nav>