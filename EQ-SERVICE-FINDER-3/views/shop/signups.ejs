<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/cart.css">
</head>

<body>
    <%- include('../includes/navigation.ejs') %>
    <main>
        <% if (products.length > 0) { %>
        <ul class="cart__item-list">
            <li class="cart__item">
              <h2 style="align-items: center;">-----Your current Signups:  -----</h2>
            </li>
            <% products.forEach(p => { %>
            <li class="cart__item">
                <h1><%= p.productId.title %></h1>
                <h2 style="font-variant-caps: all-small-caps;"><%= p.productId.eqType %></h2>
                <form action="/cart-delete-item" method="POST">
                    <input type="hidden" value="<%= p.productId._id %>" name="productId">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <button class="btn danger" type="submit">Cancel Signup</button>
                </form>
            </li>
            <% }) %>
        </ul>
        <hr>
        <!--
        <div class="centered">
            <form action="/create-order" method="POST">
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                <button type="submit" class="btn">Order Now!</button>
            </form>
        </div>
        -->
        <% } else { %>
        <h1>You haven't signed up for anything.</h1>
        <% } %>
    </main>
    <%- include('../includes/end.ejs') %>