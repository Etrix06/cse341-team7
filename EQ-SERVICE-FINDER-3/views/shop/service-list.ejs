<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/product.css">
</head>

<body>
    <%- include('../includes/navigation.ejs') %>
    <% if (isAuthenticated) { %>
        <header class="main-header">
            <nav>
                <ul class="main-header__item-list">
                    <!-- <li class="main-header__item">
                        <a class="<%= path === '/cart' ? 'active' : '' %>" href="/cart">Cart</a>
                    </li>
                    <li class="main-header__item">
                        <a class="<%= path === '/orders' ? 'active' : '' %>" href="/orders">Orders</a>
                    </li> -->
                    <li class="main-header__item">
                        <a class="<%= path === '/admin/add-product' ? 'active' : '' %>" href="/admin/add-product/service">Add Service
                        </a>
                    </li>
                    <li class="main-header__item">
                        <a class="<%= path === '/admin/products' ? 'active' : '' %>" href="/admin/products/service">Admin Services
                        </a>
                    </li>
                </ul>
            </nav>
            
        </header>
        <% } %>

    <main>
        <% if (prods.length > 0) { %>
        <div class="grid">
            <% for (let product of prods) { %>
            <% if (product.eqType === "service") { %>
            <article class="card product-item">
                <header class="card__header">
                    <h1 class="product__title">
                        <%= product.title %>
                    </h1>
                </header>
                <div class="card__image">
                    <img src="<%= product.imageUrl %>" alt="<%= product.title %>">
                </div>
                <div class="card__content">
                    <!-- <h2 class="product__price">$
                        <%= product.price %>
                    </h2> -->
                    <p class="product__description">
                        <%= product.description %>
                    </p>
                </div>
                <div class="card__actions">
                    <% if (!isAuthenticated) { %>
                        <p>Sign in for contact Info.</p>
                    <% } %>
                    <% if (isAuthenticated) { %>
                        <p>Contact Info: <%= product.contact %></p>
                    <% } %>
                    <a href="/products/<%= product._id %>" class="btn">Details</a>
                    <% if (isAuthenticated) { %>
                    <%- include('../includes/sign-up.ejs', {product: product}) %>
                    <% } %>
                </div>
            </article>
            <% } %>
            <% } %>
        </div>
        <%- include('../includes/pagination.ejs', {currentPage: currentPage, nextPage: nextPage, previousPage: previousPage, lastPage: lastPage, hasNextPage: hasNextPage, hasPreviousPage: hasPreviousPage}) %>

        <% } else { %>
        <h1>No Services Found!</h1>
        <% } %>
    </main>
    <%- include('../includes/end.ejs') %>